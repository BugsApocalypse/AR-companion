<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/app_theme_color"
    android:layout_height="match_parent"
    tools:context=".activities.AboutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView4"
            android:layout_margin="32dp"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            app:srcCompat="@drawable/astronaut_dab" />

        <TextView
            android:id="@+id/aboutUs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/apercu_pro_bold"
            android:gravity="center"
            android:padding="8dp"
            android:text="About Us"
            android:textColor="@color/white"
            android:textSize="24sp"
             />

        <TextView
            android:id="@+id/textView77"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/aboutUs1"
            android:textColor="#B2B2B2"
            android:textSize="16sp"
            app:fontFamily="@font/apercu_pro_regular"
             />

        <TextView
            android:id="@+id/ourTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/apercu_pro_bold"
            android:gravity="center"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:text="Our Team"
            android:textColor="@color/white"
            android:textSize="24sp"
            />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/aditya"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:gravity="center"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"

                    android:src="@drawable/aditya" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:text="@string/aditya"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/sohail"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"

                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"

                    android:src="@drawable/sohail" />

                <TextView
                    android:id="@+id/textView195"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:text="@string/sohail"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/tuba"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"

                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"

                    android:src="@drawable/tuba" />

                <TextView
                    android:id="@+id/textView193"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:text="@string/tuba"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary" />


            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/rahul"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"

                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/rahul" />

                <TextView
                    android:id="@+id/r99"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:text="@string/rahul"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:textColor="?android:attr/textColorSecondary" />


            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_margin="32dp"
            app:srcCompat="@drawable/astronaut_coffee" />

        <TextView
            android:id="@+id/textView145"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/apercu_pro_bold"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text="Buy us a cup of coffee :)" />

        <Button
            android:id="@+id/buyUsCoffeeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF7E1D"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:layout_margin="16dp"
            style="@style/Widget.Material3.Button.Icon"
            app:icon="@drawable/ic_baseline_coffee_24"
            app:iconTint="@color/white"
            android:text="Yayyy!" />

    </LinearLayout>
</ScrollView>